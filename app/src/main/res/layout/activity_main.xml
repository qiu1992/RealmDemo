<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qiu.realm.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        android:orientation="vertical">

        <Button
            android:id="@+id/extends_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extends方式写入"/>

        <Button
            android:id="@+id/implements_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="implements方式写入"/>

        <Button
            android:id="@+id/extends_read_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extends方式读取"/>

        <Button
            android:id="@+id/implements_read_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="implements方式读取"/>

        <Button
            android:id="@+id/batch_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量写入"/>

        <Button
            android:id="@+id/batch_read_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量读取"/>

        <Button
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除记录"/>

        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新记录"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/res_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>
    </LinearLayout>
</LinearLayout>
